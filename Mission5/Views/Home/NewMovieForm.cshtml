@{
    ViewData["Title"] = "Enter a New Movie";
}

@model Mission5.Models.MovieResponse;


<div class="text-center">
    <h1 class="display-4">Add Movie to Joel's Collection</h1>
</div>

<div class="text-center">
    <form method="post">

        <div asp-validation-summary="All"> </div>

        <label asp-for="CategoryId">Category: </label>
        <br />
        <select asp-for="CategoryId">
            <option value="">Select a Category:</option>
            @foreach (Category c in ViewBag.Category)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <br />

        <label asp-for="Title">Title: </label>
        <br />
        <input asp-for="Title" />
        <br />

        <label asp-for="Year">Year: </label>
        <br />
        <input asp-for="Year" />
        <br />

        <label asp-for="DirectorFirstName">Director First Name: </label>
        <br />
        <input asp-for="DirectorFirstName" />
        <br />

        <label asp-for="DirectorLastName">Director Last Name: </label>
        <br />
        <input asp-for="DirectorLastName" />
        <br />

        <label asp-for="Rating">Rating: </label>
        <br />
        <select asp-for="Rating">
            <option value="">Select a Rating:</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />

        <label asp-for="Edited">Edited? </label>
        <br />
        <select>
            <option value="True">Yes</option>
            <option value="False">No</option>
        </select>
        <br />

        <label asp-for="LentTo">Lent To: </label>
        <br />
        <input asp-for="LentTo" />
        <br />

        <label asp-for="Notes">Notes: </label>
        <br />
        <textarea  asp-for="Notes"></textarea>
        <br />

        <button type="submit" class="btn-primary btn-outline-primary">Submit New Movie</button>
        <br />
    </form>
    


</div>


